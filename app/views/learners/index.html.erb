<p id="notice"><%= notice %></p>

<h1>Learners</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Technology</th>
      <th>Duration</th>
      <th>Fee</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @learners.each do |learner| %>
      <tr>
        <td><%= learner.name %></td>
        <td><%= learner.technology %></td>
        <td><%= learner.duration %></td>
        <td><%= learner.fee %></td>
        <td><%= link_to 'Show', learner %></td>
        <td><%= link_to 'Edit', edit_learner_path(learner) %></td>
        <td><%= link_to 'Destroy', learner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

